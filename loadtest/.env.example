# Tartware PMS Load Test Environment (Fresh Start)

# API Gateway
GATEWAY_URL=http://localhost:8080

# Auth (used to fetch token if API_TOKEN is empty)
ADMIN_USERNAME=setup.admin
ADMIN_PASSWORD=TempPass123
API_TOKEN=

# Multi-tenant IDs (comma-separated)
TENANT_IDS=11111111-1111-1111-1111-111111111111
PROPERTY_IDS=22222222-2222-2222-2222-222222222222
ROOM_TYPE_IDS=44444444-4444-4444-4444-444444444444
RATE_CODE=BAR

# Test shape
VUS=50
DURATION=5m
RAMP_UP=30s

# Workload ratios (must sum to ~1.0)
# Or set WORKLOAD_PROFILE (ota-heavy, direct-heavy, enterprise-mix)
WORKLOAD_PROFILE=enterprise-mix
AVAILABILITY_RATIO=0.40
RES_CREATE_RATIO=0.10
RES_MODIFY_RATIO=0.06
RES_CANCEL_RATIO=0.04
OTA_SYNC_RATIO=0.12
CHECKIN_RATIO=0.04
CHECKOUT_RATIO=0.04
PAYMENT_RATIO=0.08
REPORTING_RATIO=0.12
