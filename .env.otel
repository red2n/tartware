# OpenTelemetry Configuration
# Add these to your shell environment or .bashrc to enable OTEL for all services

# OTLP Endpoint (use http://localhost:4318/v1 for local OTEL collector)
export OTEL_EXPORTER_OTLP_ENDPOINT="http://localhost:4318/v1"

# Or set specific endpoints for traces and logs
export OTEL_EXPORTER_OTLP_TRACES_ENDPOINT="http://localhost:4318/v1/traces"
export OTEL_EXPORTER_OTLP_LOGS_ENDPOINT="http://localhost:4318/v1/logs"

# Service configuration (will be overridden by each service)
# export OTEL_SERVICE_NAME="my-service"

# Log level for OTEL SDK diagnostics
export OTEL_LOG_LEVEL="info"

# Environment
export NODE_ENV="development"
