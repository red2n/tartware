{
  "name": "@tartware/housekeeping-service",
  "version": "0.1.0",
  "description": "Housekeeping domain microservice for Tartware PMS",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "npm run lint && npm run biome && npm run knip && tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "typecheck": "tsc --noEmit",
    "biome": "biome check src",
    "biome:fix": "biome format src --write",
    "knip": "knip --tsConfig tsconfig.json",
    "knip:fix": "knip --tsConfig tsconfig.json --fix",
    "clean": "rm -rf dist coverage vitest-report *.tsbuildinfo"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/sensible": "^5.1.1",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.7.0",
    "@tartware/config": "file:../config",
    "@tartware/openapi": "file:../openapi-utils",
    "@tartware/schemas": "file:../../schema",
    "@tartware/telemetry": "file:../telemetry",
    "@tartware/tenant-auth": "file:../tenant-auth",
    "fastify": "^5.6.2",
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "knip": "^5.67.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
