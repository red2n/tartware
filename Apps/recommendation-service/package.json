{
  "name": "@tartware/recommendation-service",
  "version": "0.1.0",
  "description": "Room recommendation service for Tartware PMS (inspired by X's recommendation architecture)",
  "private": true,
  "type": "module",
  "main": "dist/Apps/recommendation-service/src/index.js",
  "types": "dist/Apps/recommendation-service/src/index.d.ts",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/Apps/recommendation-service/src/index.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "biome": "biome check src",
    "biome:fix": "biome format src --write",
    "knip": "knip --tsConfig tsconfig.json",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist coverage vitest-report *.tsbuildinfo"
  },
  "dependencies": {
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "@tartware/candidate-pipeline": "workspace:*",
    "@tartware/config": "workspace:*",
    "@tartware/fastify-server": "workspace:*",
    "@tartware/telemetry": "workspace:*",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "prom-client": "^15.1.3",
    "@tartware/schemas": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "knip": "^5.67.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
