{
  "extends": "../../schema/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["vitest/globals", "node"],
    "composite": false,
    "noEmit": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@tartware/schemas": ["../../../schema/src/index.ts"],
      "@tartware/schemas/*": ["../../../schema/src/*"],
      "@tartware/telemetry": ["../../telemetry/src/index.ts"],
      "@tartware/telemetry/*": ["../../telemetry/src/*"],
      "@tartware/config": ["../../config/src/index.ts"],
      "@tartware/config/*": ["../../config/src/*"],
      "@tartware/fastify-server": ["../../fastify-server/src/index.ts"],
      "@tartware/fastify-server/*": ["../../fastify-server/src/*"],
      "@tartware/candidate-pipeline": ["../../candidate-pipeline/src/index.ts"],
      "@tartware/candidate-pipeline/*": ["../../candidate-pipeline/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
