# Server Configuration
PORT=3700
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_PRETTY=true
LOG_REQUESTS=true

# Authentication
AUTH_JWT_SECRET=local-dev-secret
AUTH_JWT_ISSUER=tartware-core
AUTH_JWT_AUDIENCE=tartware

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=tartware
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000

# Kafka
COMMAND_CENTER_KAFKA_CLIENT_ID=tartware-command-center
COMMAND_CENTER_KAFKA_BROKERS=localhost:29092
COMMAND_CENTER_KAFKA_TOPIC=commands.primary
COMMAND_CENTER_DLQ_TOPIC=commands.primary.dlq

# Outbox Dispatcher
COMMAND_CENTER_OUTBOX_WORKER_ID=command-center-outbox
COMMAND_CENTER_OUTBOX_POLL_INTERVAL_MS=2000
COMMAND_CENTER_OUTBOX_BATCH_SIZE=25
COMMAND_CENTER_OUTBOX_LOCK_TIMEOUT_MS=30000
COMMAND_CENTER_OUTBOX_MAX_RETRIES=5
COMMAND_CENTER_OUTBOX_RETRY_BACKOFF_MS=5000
COMMAND_CENTER_OUTBOX_TENANT_THROTTLE_MS=25
COMMAND_CENTER_OUTBOX_TENANT_JITTER_MS=40
COMMAND_CENTER_OUTBOX_TENANT_THROTTLE_CLEANUP_MS=120000

# Command Registry
COMMAND_REGISTRY_REFRESH_MS=30000
