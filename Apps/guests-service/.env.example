# Server Configuration
PORT=3300
HOST=0.0.0.0

# Logging
LOG_LEVEL=info
LOG_PRETTY=true
LOG_REQUESTS=true

# Authentication
AUTH_JWT_SECRET=local-dev-secret
AUTH_JWT_ISSUER=tartware-core
AUTH_JWT_AUDIENCE=tartware

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=tartware
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000

# Compliance
COMPLIANCE_GUEST_DATA_RETENTION_DAYS=1095
COMPLIANCE_REQUIRE_GUEST_ENCRYPTION=true
GUEST_DATA_ENCRYPTION_KEY=local-dev-guest-key

# Command Center / Kafka
KAFKA_CLIENT_ID=tartware-guests-service
KAFKA_BROKERS=localhost:29092
KAFKA_MAX_BATCH_BYTES=1048576
COMMAND_CENTER_TOPIC=commands.primary
COMMAND_CENTER_CONSUMER_GROUP=guests-command-consumers
COMMAND_CENTER_TARGET_SERVICE_ID=guests-service
