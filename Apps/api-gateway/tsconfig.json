{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM"],
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@tartware/openapi": ["../openapi-utils/src/index.ts"],
      "@tartware/openapi/*": ["../openapi-utils/src/*"],
      "@tartware/telemetry": ["../telemetry/src/index.ts"],
      "@tartware/telemetry/*": ["../telemetry/src/*"],
      "@tartware/config": ["../config/src/index.ts"],
      "@tartware/config/*": ["../config/src/*"],
      "@tartware/schemas": ["../../schema/src/index.ts"],
      "@tartware/schemas/*": ["../../schema/src/*"],
      "@tartware/outbox": ["../outbox/src/index.ts"],
      "@tartware/outbox/*": ["../outbox/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
