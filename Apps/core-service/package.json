{
  "name": "@tartware/core-service",
  "version": "0.1.0",
  "description": "Core domain API service for Tartware PMS",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "npm run lint && npm run biome && npm run knip && tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "typecheck": "tsc --noEmit",
    "biome": "biome check src",
    "biome:fix": "biome format src --write",
    "knip": "knip --tsConfig tsconfig.json",
    "knip:fix": "knip --tsConfig tsconfig.json --fix",
    "clean": "rm -rf dist coverage vitest-report *.tsbuildinfo",
    "reset:passwords": "tsx scripts/reset-default-password.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/sensible": "^5.1.1",
    "@tartware/schemas": "file:../../schema",
    "@tartware/telemetry": "file:../telemetry",
    "@types/ioredis": "^4.28.10",
    "dotenv": "^17.2.3",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "bcryptjs": "^2.4.3",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "redis": "^5.9.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "@types/bcryptjs": "^2.4.6",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "@types/jsonwebtoken": "^9.0.6",
    "eslint-plugin-import": "^2.29.1",
    "knip": "^5.67.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
