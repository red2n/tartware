{
  "name": "@tartware/core-service",
  "version": "0.1.0",
  "description": "Core domain API service for Tartware PMS",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "npm run knip && tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "typecheck": "tsc --noEmit",
    "knip": "knip --tsConfig tsconfig.json",
    "knip:fix": "knip --tsConfig tsconfig.json --fix"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/sensible": "^5.1.1",
    "@tartware/schemas": "file:../../schema",
    "fastify": "^4.26.2",
    "pg": "^8.11.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "knip": "^5.67.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
