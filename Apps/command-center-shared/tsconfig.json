{
  "extends": "../../schema/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": true,
    "strict": true,
    "paths": {
      "@tartware/schemas": ["../../schema/src/index.ts"],
      "@tartware/schemas/*": ["../../schema/src/*.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
