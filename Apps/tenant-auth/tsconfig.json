{
  "extends": "../../schema/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "declaration": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
