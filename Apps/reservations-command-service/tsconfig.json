{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@tartware/schemas": ["../../schema/src/index.ts"],
      "@tartware/schemas/*": ["../../schema/src/*"],
      "@tartware/telemetry": ["../telemetry/src/index.ts"],
      "@tartware/telemetry/*": ["../telemetry/src/*"],
      "@tartware/domain-events": ["../domain-events/src/index.ts"],
      "@tartware/domain-events/*": ["../domain-events/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
