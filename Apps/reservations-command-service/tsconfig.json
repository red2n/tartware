{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@tartware/schemas": ["../../../schema/src/index.ts"],
      "@tartware/schemas/*": ["../../../schema/src/*"],
      "@tartware/telemetry": ["../../telemetry/src/index.ts"],
      "@tartware/telemetry/*": ["../../telemetry/src/*"],
      "@tartware/config": ["../../config/src/index.ts"],
      "@tartware/config/*": ["../../config/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
