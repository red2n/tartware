{
  "name": "tartware-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "postinstall": "rm -rf node_modules/rxjs",
    "prebuild": "npm run lint && npm run biome && npm run knip",
    "build": "ng build",
    "prebuild:prod": "npm run lint && npm run biome",
    "build:prod": "ng build --configuration production",
    "build:stats": "ng build --configuration production --stats-json",
    "analyze": "npm run build:stats && npx webpack-bundle-analyzer dist/tartware-ui/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:coverage": "ng test --no-watch --code-coverage",
    "lint": "eslint \"src/**/*.{ts,html}\"",
    "lint:fix": "eslint \"src/**/*.{ts,html}\" --fix",
    "biome": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:format": "biome format --write .",
    "biome:ci": "biome ci .",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "clean": "rm -rf dist coverage playwright-report test-output .angular .playwright",
    "format": "prettier --write \"src/**/*.{ts,html,scss,json}\" && biome format --write .",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,json}\" && biome check .",
    "validate": "npm run lint && npm run biome && npm run build",
    "e2e": "playwright test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/material": "^18.2.14",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@angular/service-worker": "^18.2.14",

    "@tartware/schemas": "file:../../schema",

    "ag-grid-angular": "^34.3.1",
    "ag-grid-community": "^34.3.1",
    "autoprefixer": "^10.4.21",

    "postcss": "^8.5.6",
    "rxjs": "^7.8.2",
    "tailwindcss": "^3.4.18",
    "tslib": "^2.3.0",

    "zod": "^3.23.8",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "vitest": "^4.0.12",
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.12",
    "@angular-devkit/build-angular": "^18.2.21",
    "@angular-eslint/builder": "20.5.1",
    "@angular/cli": "^18.2.21",
    "@angular/compiler-cli": "^18.2.0",
    "@biomejs/biome": "2.3.4",
    "@playwright/test": "^1.48.0",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.5.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "eslint": "8.57.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "knip": "^5.67.0",
    "pg": "^8.13.1",
    "prettier": "^3.6.2",
    "typescript": "~5.5.2",
    "typescript-eslint": "8.46.2"
  }
}
