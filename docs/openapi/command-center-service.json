{
  "openapi": "3.0.3",
  "info": {
    "title": "@tartware/core-service API",
    "version": "0.1.0",
    "description": "Command orchestration surface for Tartware (central ingress + routing)."
  },
  "components": {
    "schemas": {}
  },
  "paths": {
    "/health": {
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/ready": {
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/v1/commands/definitions": {
      "get": {
        "summary": "List supported command definitions",
        "tags": [
          "Command Center"
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "label": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "samplePayload": {
                        "type": "object",
                        "additionalProperties": {}
                      }
                    },
                    "required": [
                      "name",
                      "label",
                      "description"
                    ],
                    "additionalProperties": false
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/commands/{commandName}/execute": {
      "post": {
        "summary": "Submit a command for asynchronous execution",
        "tags": [
          "Command Center"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tenant_id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "payload": {
                    "type": "object",
                    "additionalProperties": {}
                  },
                  "correlation_id": {
                    "type": "string",
                    "minLength": 1
                  },
                  "metadata": {
                    "type": "object",
                    "properties": {
                      "initiated_by": {
                        "type": "object",
                        "properties": {
                          "user_id": {
                            "type": "string",
                            "format": "uuid"
                          },
                          "role": {
                            "type": "string",
                            "minLength": 1
                          }
                        },
                        "required": [
                          "user_id",
                          "role"
                        ],
                        "additionalProperties": false
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "required": [
                  "tenant_id",
                  "payload"
                ],
                "additionalProperties": false
              }
            }
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string",
              "minLength": 1
            },
            "in": "path",
            "name": "commandName",
            "required": true
          }
        ],
        "responses": {
          "202": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "accepted"
                      ]
                    },
                    "commandId": {
                      "type": "string"
                    },
                    "commandName": {
                      "type": "string"
                    },
                    "tenantId": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "correlationId": {
                      "type": "string"
                    },
                    "targetService": {
                      "type": "string"
                    },
                    "requestedAt": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "status",
                    "commandId",
                    "commandName",
                    "tenantId",
                    "targetService",
                    "requestedAt"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ]
}