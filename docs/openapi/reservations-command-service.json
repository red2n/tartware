    "/metrics": {
      "get": {
        "summary": "Prometheus metrics endpoint",
        "tags": [
          "Metrics"
        ],
        "responses": {
          "200": {
            "description": "Prometheus text exposition format",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "Prometheus text exposition format"
                }
              }
            }
          }
        }
      }
    },
    "/v1/tenants/{tenantId}/reservations": {
      "post": {
        "summary": "Submit an asynchronous reservation command",
        "tags": [
          "Reservation Commands"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "property_id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "guest_id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "room_type_id": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "check_in_date": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "check_out_date": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "booking_date": {
                    "type": "string",
                    "format": "date-time"
                  },
                  "status": {
                    "type": "string",
                    "enum": [
                      "PENDING",
                      "CONFIRMED",
                      "CHECKED_IN",
                      "CHECKED_OUT",
                      "CANCELLED",
                      "NO_SHOW"
                    ]
                  },
                  "source": {
                    "type": "string",
                    "enum": [
                      "DIRECT",
                      "WEBSITE",
                      "PHONE",
                      "WALKIN",
                      "OTA",
                      "CORPORATE",
                      "GROUP"
                    ]
                  },
                  "total_amount": {
                    "type": "number",
                    "minimum": 0
                  },
                  "currency": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 3
                  },
                  "notes": {
                    "type": "string",
                    "maxLength": 2000
                  }
                },
                "required": [
                  "property_id",
                  "guest_id",
                  "room_type_id",
                  "check_in_date",
                  "check_out_date",
                  "total_amount"
                ],
                "additionalProperties": false
              }
            }
          },
          "required": true
        },
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "in": "path",
            "name": "tenantId",
            "required": true
          }
        ],
        "responses": {
          "202": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "accepted"
                      ]
                    },
                    "eventId": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "correlationId": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "required": [
                    "status",
                    "eventId"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ]
}