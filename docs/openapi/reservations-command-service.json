{
  "openapi": "3.0.3",
  "info": {
    "title": "reservations-command-service API",
    "description": "Reservation command ingestion surface that writes to the transactional outbox and lifecycle guard.",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {}
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Reservation command health check",
        "tags": [
          "Health"
        ],
        "responses": {
