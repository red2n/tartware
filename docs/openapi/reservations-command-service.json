{
  "openapi": "3.0.3",
  "info": {
    "title": "reservations-command-service API",
    "description": "Reservation command ingestion surface that writes to the transactional outbox and lifecycle guard.",
    "version": "1.0.0"
  },
  "components": {
    "schemas": {}
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Reservation command health check",
        "tags": [
          "Health"
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/ready": {
      "get": {
        "responses": {
          "200": {
            "description": "Default Response"
          }
        }
      }
    },
    "/health/liveness": {
      "get": {
        "summary": "Liveness probe endpoint",
        "tags": [
          "Health"
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/health/readiness": {
      "get": {
        "summary": "Readiness probe (DB + Kafka)",
        "tags": [
          "Health"
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          },
          "503": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    },
    "/health/reliability": {
      "get": {
        "summary": "Command pipeline reliability snapshot",
        "tags": [
          "Health"
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "healthy",
                        "degraded",
                        "critical"
                      ]
                    },
                    "generatedAt": {
                      "type": "string"
                    },
                    "issues": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "outbox": {
                      "type": "object",
                      "properties": {
                        "pending": {
                          "type": "number"
                        },
                        "warnThreshold": {
                          "type": "number"
                        },
                        "criticalThreshold": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "pending",
                        "warnThreshold",
                        "criticalThreshold"
                      ],
                      "additionalProperties": false
                    },
                    "consumer": {
                      "type": "object",
                      "properties": {
                        "partitions": {
                          "type": "number"
                        },
                        "stalePartitions": {
                          "type": "number"
                        },
                        "maxSecondsSinceCommit": {
                          "type": "number",
                          "nullable": true
                        },
                        "staleThresholdSeconds": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "partitions",
                        "stalePartitions",
                        "maxSecondsSinceCommit",
                        "staleThresholdSeconds"
                      ],
                      "additionalProperties": false
                    },
                    "lifecycle": {
                      "type": "object",
                      "properties": {
                        "stalledCommands": {
                          "type": "number"
                        },
                        "oldestStuckSeconds": {
                          "type": "number",
                          "nullable": true
                        },
                        "dlqTotal": {
                          "type": "number"
                        },
                        "stalledThresholdSeconds": {
                          "type": "number"
                        }
                      },
                      "required": [
                        "stalledCommands",
                        "oldestStuckSeconds",
                        "dlqTotal",
                        "stalledThresholdSeconds"
                      ],
                      "additionalProperties": false
                    },
                    "dlq": {
                      "type": "object",
                      "properties": {
                        "depth": {
                          "type": "number",
                          "nullable": true
                        },
                        "warnThreshold": {
                          "type": "number"
                        },
                        "criticalThreshold": {
                          "type": "number"
                        },
                        "topic": {
                          "type": "string"
                        },
                        "error": {
                          "type": "string",
                          "nullable": true
                        }
                      },
                      "required": [
                        "depth",
                        "warnThreshold",
                        "criticalThreshold",
                        "topic",
                        "error"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "required": [
                    "status",
                    "generatedAt",
                    "issues",
                    "outbox",
                    "consumer",
                    "lifecycle",
                    "dlq"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
    "/metrics": {
      "get": {
        "summary": "Prometheus metrics endpoint",
        "tags": [
          "Metrics"
        ],
        "responses": {
          "200": {
            "description": "Prometheus text exposition format",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "description": "Prometheus text exposition format"
                }
              }
            }
          }
        }
      }
    },
    "/v1/reservations/{reservationId}/lifecycle": {
      "get": {
        "summary": "Inspect lifecycle states for a reservation",
        "tags": [
          "Reservation Lifecycle"
        ],
        "parameters": [
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "in": "query",
            "name": "tenant_id",
            "required": true
          },
          {
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "in": "path",
            "name": "reservationId",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "event_id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "is_deleted": {
                        "type": "boolean"
                      },
                      "deleted_at": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "deleted_by": {
                        "type": "string",
                        "maxLength": 100
                      },
                      "tenant_id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "reservation_id": {
                        "type": "string",
                        "format": "uuid"
                      },
                      "command_name": {
                        "type": "string"
                      },
                      "correlation_id": {
                        "type": "string",
                        "nullable": true
                      },
                      "partition_key": {
                        "type": "string",
                        "nullable": true
                      },
                      "current_state": {
                        "type": "string",
                        "enum": [
                          "RECEIVED",
                          "PERSISTED",
                          "IN_PROGRESS",
                          "PUBLISHED",
                          "CONSUMED",
                          "APPLIED",
                          "FAILED",
                          "DLQ"
                        ]
                      },
                      "state_transitions": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "state": {
                              "type": "string",
                              "enum": [
                                "RECEIVED",
                                "PERSISTED",
                                "IN_PROGRESS",
                                "PUBLISHED",
                                "CONSUMED",
                                "APPLIED",
                                "FAILED",
                                "DLQ"
                              ]
                            },
                            "timestamp": {
                              "anyOf": [
                                {
                                  "type": "string"
                                },
                                {
                                  "type": "string",
                                  "format": "date-time"
                                }
                              ]
                            },
                            "actor": {
                              "type": "string"
                            },
                            "details": {
                              "type": "object",
                              "additionalProperties": {}
                            }
                          },
                          "required": [
                            "state",
                            "timestamp"
                          ],
                          "additionalProperties": false
                        }
                      },
                      "metadata": {
                        "type": "object",
                        "additionalProperties": {},
                        "description": "Flexible JSONB metadata object"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "updated_at": {
                        "type": "string",
                        "format": "date-time"
                      }
                    },
                    "required": [
                      "event_id",
                      "tenant_id",
                      "command_name",
                      "current_state",
                      "state_transitions",
                      "created_at",
                      "updated_at"
                    ],
                    "additionalProperties": false
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ]
}