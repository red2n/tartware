{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "project": ["src/**/*.ts"],
  "ignore": ["dist/**", "node_modules/**", "coverage/**", "src/utilities/**"],
  "ignoreExportsUsedInFile": true,
  "ignoreDependencies": ["prettier", "tsx"],
  "ignoreBinaries": ["tsc", "knip", "prettier", "tsx"],
  "vitest": {
    "entry": ["tests/**/*.test.ts"]
  }
}
