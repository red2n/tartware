}

###############################################################################
# 7. SYSTEM ADMIN - TENANTS
###############################################################################
# NOTE: These endpoints require system admin role (SYSTEM_ADMIN or higher)

# List all tenants (system admin)
GET {{baseUrl}}/v1/system/tenants?limit=50
Authorization: Bearer {{authToken}}

###
# Create tenant (system admin)
POST {{baseUrl}}/v1/system/tenants
Content-Type: application/json
Authorization: Bearer {{authToken}}

{
  "name": "New Hotel Group",
  "slug": "new-hotel-group",
  "type": "INDEPENDENT",
  "email": "admin@newhotelgroup.com",
  "phone": "+1-555-0199"
}

