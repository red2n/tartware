Authorization: Bearer {{authToken}}

{
  "tenant_id": "{{tenantId}}",
  "property_id": "{{propertyId}}",
  "room_type_id": "{{roomTypeId}}",
  "rate_id": "{{rateId}}",
  "currency": "USD",
  "days": [
    {
      "stay_date": "2026-03-20",
      "rate_amount": 219.00,
